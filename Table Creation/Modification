--Table for all of the Animes that I will insert values into.--
CREATE TABLE Anime (
    Anime_Id INT NOT NULL AUTO_INCREMENT,
    Name VARCHAR(255),
    Release_Year INT,
    Genre VARCHAR(255),
    MAL_Score DEC(2,2),
    Protaganist VARCHAR(255),
    Ongoing BOOLEAN,
    CONSTRAINT PK_Anime PRIMARY KEY (Anime_Id)
);

--Modifications to the Anime table.--
